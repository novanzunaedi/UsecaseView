<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_box">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginBottom="5dp"
        android:elevation="3dp">

        <RelativeLayout
            android:elevation="8dp"
            android:id="@+id/rltriangel1"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/triagel_shape"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:elevation="8dp"
            android:id="@+id/rltriangel2"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/triagel_shape"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:elevation="8dp"
            android:id="@+id/rlContent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="16dp"
            android:background="@drawable/shape_layout"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleUseCase"
                    android:text="Tittlenya ini"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="bodynya adalah body"
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvDismiss"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#68C0B2"
                    android:textSize="17dp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:elevation="8dp"
            android:id="@+id/rltriangel4"
            android:rotation="180"
            android:layout_marginBottom="-30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/triagel_shape"
            android:layout_below="@+id/rlContent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:visibility="gone"
            android:elevation="8dp"
            android:id="@+id/rltriangel3"
            android:rotation="180"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/triagel_shape"
            android:layout_below="@+id/rlContent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

</RelativeLayout>